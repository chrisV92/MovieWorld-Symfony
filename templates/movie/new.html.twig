{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    {# templates/movie/new.html.twig #}
    <div class="container-fluid">
        <div class="row py-3">
            <div class="col-8 offset-2">
                <h3>Add New Movie</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-8 offset-2">
                {{ form_start(form) }}
                <div class="form-outline mb-4">
                    {{ form_row(form.title) }}
                </div>
                <div class="form-outline mb-4">
                    {{ form_row(form.description) }}
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" type="submit" class="btn btn-primary btn-block mb-4 text-right">Create Movie</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
